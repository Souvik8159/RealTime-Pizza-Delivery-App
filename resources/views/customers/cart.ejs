<section class="cart py-16">

    <% if(session.cart && Object.keys(session.cart.items).length > 0){%>
        <div class="order container mx-auto xl:w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img src="/img/cart-black.png" alt="Cart-black">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>
    
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) {%>
                <div class="flex items-center my-8">
                    <img class="w-24" src="/img/<%= pizza.item.image %>" alt="Pizza">
                    <div class="flex-1 ml-4">
                        <h1><%= pizza.item.name %></h1>
                        <span><%= pizza.item.size %></span>
                    </div>
                    <span class="flex-1"><%= pizza.qty %> Pcs</span>
                    <span class="font-bold text-lg">‚Çπ<%= pizza.item.price*pizza.qty %></span>
                    <span class="ml-4">
                        <form action="/remove-item" method="POST" class="ml-4">
                            <input type="hidden" name="pizzaId" value="<%= pizza.item._id %>">
                            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-1 px-2 rounded-full focus:outline-none">
                                Cancel
                            </button>
                        </form>
                    </span>
                </div>
                <% } %>
            </div>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount: </span>
                    <span class="amount text-2xl font-bold ml-2">‚Çπ<%=session.cart.totalPrice  %></span>
                </div>
                <% if(user) {%>
                <div>
                    <form action="/orders" method="POST" class="mt-12">
                        <input type="text" class="border border-gray-400 p-2 mb-4 w-1/2" placeholder="Phone No" name="phone">
                        <input type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address" name="address">
                        <div>
                            <button type="submit" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Order Now</button>
                        </div>
                    </form>
                </div>
                <% }else{ %>
                <a href="/login" class="inline-block cursor-pointer px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary">Login to continue</a>
                <% } %>
            </div>
        </div>
   <% }else{%>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty üòê</h1>
            <p class="text-gray-500 text-lg mb-12">
                You probably haven't ordered a pizza yet. <br>
                   To order a pizza, go to main page.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="Empty Cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go Back</a>
            
        </div>
    </div>
   <%} %>
   
</section>

<script>
    
    document.querySelectorAll('.cancel-form').forEach(form => {
        form.addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);

            fetch('/remove-item', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                // Handle any UI updates if needed
                if (Object.keys(data.cartItems).length === 0) {
                    // If the cart is empty, update the DOM to show the empty cart section
                    document.querySelector('.order').style.display = 'none'; // Hide the order summary
                    document.querySelector('.empty-cart').style.display = 'block'; // Show the empty cart section
                } else {
                    // If there are items in the cart, reload the page for simplicity
                    location.reload();
                }
            })
            .catch(error => console.error('Error:', error));
        });
    });
</script>